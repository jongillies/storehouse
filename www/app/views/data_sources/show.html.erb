<%- model_class = DataSource -%>
<div class="page-header">
  <h1><%= t '.title', :default => model_class.model_name.human %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:name) %>:</strong></dt>
  <dd><%= @data_source.name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:description) %>:</strong></dt>
  <dd><%= @data_source.description %></dd>
  <dt><strong><%= model_class.human_attribute_name(:active) %>:</strong></dt>
  <dd><%= @data_source.active %></dd>
  <dt><strong><%= model_class.human_attribute_name(:contact) %>:</strong></dt>
  <dd><%= @data_source.contact %></dd>
  <% if user_signed_in? %>
      <% if current_user.has_role? :admin %>
          <dt><strong><%= model_class.human_attribute_name(:connection_info) %>:</strong></dt>
          <dd><%= @data_source.connection_info %></dd>
          <dt><strong><%= model_class.human_attribute_name(:cron_schedule) %>:</strong></dt>
          <dd><%= @data_source.cron_schedule %></dd>
      <% end %>
  <% end %>
</dl>

<% if user_signed_in? %>
    <% if current_user.has_role? :admin %>

        <div class="form-actions">
          <%= link_to t('.back', :default => t("helpers.links.back")),
                      data_sources_path, :class => 'btn' %>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_data_source_path(@data_source), :class => 'btn' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      data_source_path(@data_source),
                      :method => 'delete',
                      :data   => {:confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?'))},
                      :class  => 'btn btn-danger' %>
        </div>
    <% end %>
<% end %>
