<%- model_class = Blob -%>
<div class="page-header">
  <h1><%= t '.title', :default => model_class.model_name.human %></h1>
</div>

<table class="table table-striped">
  <tr>
    <td><strong><%= model_class.human_attribute_name(:checksum) %>:</strong></td>
    <td><%= @blob.checksum %></td>
  </tr>
  <tr>
    <td><strong><%= model_class.human_attribute_name(:data) %>:</strong></td>
    <td><pre class="prettyprint"><%= JSON.pretty_generate(JSON.parse(@blob.data)) %></pre></td>
  </tr>
</table>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              blobs_path, :class => 'btn' %>
</div>
